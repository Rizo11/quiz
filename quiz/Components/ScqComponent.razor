@using Entity
<div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
  <div class="card-header">"question.QuestionText"</div>
  <div class="card-body">
    <h5 class="card-title">Light card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

      <p>@(question.QuestionText)</p>
      @foreach (var item in question.Answers.Keys)
      {
          <div>
              <input type="radio" name="question1" id="@item" value="@item" @onchange="() => OnSelected(item)" />
              <label for="@item">@item</label>
          </div>
      }
      <button type="button" @onclick="() => OnClickCallback.InvokeAsync(Result)">Submit</button>
  </div>
</div>
@code {
  [Parameter]
  public EventCallback<float> OnClickCallback { get; set; }
  
  [Parameter]
  public Question question { get; set; }
  public float Result { get; set; } = -1;
  
  @* public class Question
  {
      public string QuestionText { get; set; }
      public enum Colors { Red, Green, Blue, Yellow };
  } *@
  public void OnSelected(string color)
  {
    if(question.Answers[color])
    {
      Result = 1;
    }
    else
    {
      Result = 0;
    }
  }
}